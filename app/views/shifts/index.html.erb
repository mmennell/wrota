<div class="page-header">
  <h1>
    Shifts
    <a href="/shifts/new" class="btn btn-lg btn-success">New Shift</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "shifts_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :start_time, "Start time" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='start_timegteqPicker'>
                  <%= f.text_field :start_time_gteq, :class => "form-control", :placeholder => "Start time greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='start_timelteqPicker'>
                  <%= f.text_field :start_time_lteq, :class => "form-control", :placeholder => "Start time less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#start_timegteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#start_timelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#start_timegteqPicker').on("dp.change", function (e) {
                  $('#start_timelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#start_timelteqPicker').on("dp.change", function (e) {
                  $('#start_timegteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :allocated_eq, "Allocated" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :allocated_eq, "1", checked: ((params[:q] && params[:q][:allocated_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :allocated_eq, "0", checked: ((params[:q] && params[:q][:allocated_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :allocated_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :bonus_terms_cont, "Bonus terms contains" %>
    <%= f.text_field :bonus_terms_cont, :class => "form-control", :placeholder => "Bonus terms contains" %>
  </div>

<div class="form-group">
    <%= f.label :bonus_cont, "Bonus contains" %>
    <%= f.text_field :bonus_cont, :class => "form-control", :placeholder => "Bonus contains" %>
  </div>

<div class="form-group">
          <%= f.label :end_time, "End time" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='end_timegteqPicker'>
                  <%= f.text_field :end_time_gteq, :class => "form-control", :placeholder => "End time greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='end_timelteqPicker'>
                  <%= f.text_field :end_time_lteq, :class => "form-control", :placeholder => "End time less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#end_timegteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#end_timelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#end_timegteqPicker').on("dp.change", function (e) {
                  $('#end_timelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#end_timelteqPicker').on("dp.change", function (e) {
                  $('#end_timegteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :role_role_name_cont, "Role role_name contains" %>
      <%= f.text_field :role_role_name_cont, :class => "form-control", :placeholder => "Role role_name contains" %>
    </div>

<div class="form-group">
      <%= f.label :staff_firstname_cont, "Staff firstname contains" %>
      <%= f.text_field :staff_firstname_cont, :class => "form-control", :placeholder => "Staff firstname contains" %>
    </div>

<div class="form-group">
  <%= f.label :overall_rating, "RestaurantReview Overall rating" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :restaurant_review_overall_rating_gteq, :class => "form-control", :placeholder => "RestaurantReview Overall rating greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :restaurant_review_overall_rating_lteq, :class => "form-control", :placeholder => "RestaurantReview Overall rating less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/shifts" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#shifts_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Start time</th>
        <th>End time</th>
        <th>Role</th>
        <th>Bonus</th>
        <th>Bonus terms</th>
        <th>Staff</th>
        <th>Allocated</th>
        <th>Actions</th>
      </tr>

      <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.start_time %></td>
        <td><%= shift.end_time %></td>
        <td>
          <% if shift.role.present? %>
            <a href="/roles/<%= shift.role.id %>">
              <%= shift.role.role_name %>
            </a>
          <% end %>
        </td>
        <td><%= shift.bonus %></td>
        <td><%= shift.bonus_terms %></td>
        <td>
          <% if shift.staff.present? %>
            <a href="/staffs/<%= shift.staff.id %>">
              <%= shift.staff.firstname %>
            </a>
          <% end %>
        </td>
        <td><%= shift.allocated %></td>
        <td>
          <a href="/shifts/<%= shift.id %>" class="btn btn-primary">Show</a>
          <a href="/shifts/<%= shift.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_shift/<%= shift.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @shifts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
